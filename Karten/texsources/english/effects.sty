% ----- Commands ----- %

\newcommand{\addpermanentstorypoints}[1]{You \underline{permanently} have #1 more \storypoint\ at your disposal.}
\newcommand{\removepermanentstorypoints}[1]{You \underline{permanently} have #1 less \storypoint\ at your disposal.}

\newcommand{\addtemporarystorypoints}[1]{\underline{Only in the next iteration}, you have #1 \storypoint\ more at your disposal.}
\newcommand{\removetemporarystorypoints}[1]{\underline{Only in the next iteration}, you have #1 \storypoint\ less at your disposal.}

\newcommand{\addtemporarystorypointsnow}[1]{\underline{Only in this iteration}, you have #1 \storypoint\ more at your disposal.}
\newcommand{\removetemporarystorypointsnow}[1]{\underline{Only in the next iteration}, you have #1 \storypoint\ less at your disposal.}

\newcommand{\addfeature}{Add one \feature\ to the backlog.}
\newcommand{\addfeatures}[1]{Add #1 \features\ to the backlog.}

\newcommand{\addbug}{Add one \bug\ to the backlog.}
\newcommand{\addbugs}[1]{Add #1 \bugs\ to the backlog.}

\newcommand{\addfeaturesandbugs}[2]{Add #1 \feature\ and #2 \bug\ to the backlog.}

\newcommand{\adddebtbackend}[1]{Add #1 \technicaldebtbackend\ technical debt to the backend.}
\newcommand{\adddebtfrontend}[1]{Add #1 \technicaldebtfrontend\ technical debt to the frontend.}
\newcommand{\removedebtbackend}[1]{Remove #1 \technicaldebtbackend\ technical debt from the backend.}
\newcommand{\removedebtfrontend}[1]{Remove #1 \technicaldebtfrontend\ technical debt from the frontend.}

\newcommand{\dontcountfordebtcalculation}{This card does \underline{\textbf{not}} count for the calculation of technical debt.}

\newcommand{\returntobacklog}[3]{Put this card with this side facing up back into the backlog. It is a #1 with \kosten{#2} + 1 \storypoint / #3.}
